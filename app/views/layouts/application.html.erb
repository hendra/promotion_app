    <div class="navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container" style="height: 50px;">
          <h3 class="brand" style="color: white;margin-top: 10px;"><a href="/" style="color: white;">Promotion Product</a></h3>
        </div>
      </div>
    </div>
    <div class="container" style="margin-top: 70px;background-color: whitesmoke;border-radius: 5px;padding: 10px;">
     <%= yield %> 
    </div>
    <div class="navbar-fixed-bottom">
      <div class="navbar-inner">
        <div class="container">

        </div>
      </div>
    </div>
